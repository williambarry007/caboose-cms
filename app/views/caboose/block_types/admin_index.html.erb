<div id='crumbtrail'>
  <a href='/admin'>Admin</a> >
  Block Types
</div>


<h1>Block Types</h1>

<p>  
  <a href='/admin/block-types/store' class="caboose-btn">Block Type Store</a> |
  <a href='/admin/block-types/new' class="caboose-btn">New Block Type</a>
</p>


<% if (@block_types.count > 0) %>

  <table class='data' style="width: 96%;">
    <tr>
      <th>Name</th>
      <th>Description</th>      
    </tr>
  <% @block_types.each do |bt| %>
    <tr onclick="window.location='/admin/block-types/<%= bt.id %>/edit';">
      <td><%= bt.name        %></td>
      <td><%= bt.description %></td>    
    </tr>
  <% end %>
  </table>  



<% else %>

  <p>There are no block types.</p>

<% end %>

